{
  "[python]": {
    "editor.codeActionsOnSave": { "source.organizeImports": true },
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnSave": true
  },
  "flake8.args": ["--rcfile=.flake8", "--exclude=./utility-repo-scripts"],
  "pylint.args": ["--rcfile=.pylintrc", "--ignore=./utility-repo-scripts/**"],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoImportUserSymbols": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.exclude": [
    "**/node_modules",
    "**/__pycache__",
    ".git",
    "./utility-repo-scripts/**"
  ],
  "python.analysis.importFormat": "absolute",
  "python.analysis.indexing": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.useLibraryCodeForTypes": true,
  "python.defaultInterpreterPath": "~/.venvs/utility-repo-scripts-testing",
  "python.formatting.provider": "none",
  "python.linting.banditArgs": [],
  "python.linting.banditEnabled": false,
  "python.linting.enabled": true,
  "python.linting.flake8Args": [
    "--rcfile=.flake8",
    "--exclude=./utility-repo-scripts"
  ],
  "python.linting.flake8Enabled": true,
  "python.linting.ignorePatterns": [
    ".vscode/*.py",
    "**/site-packages/**/*.py",
    "./utility-repo-scripts/**"
  ],
  "python.linting.mypyArgs": [
    "--ignore-missing-imports",
    "--follow-imports=silent"
  ],
  "python.linting.mypyEnabled": false,
  "python.linting.prospectorArgs": [],
  "python.linting.prospectorEnabled": false,
  "python.linting.pycodestyleArgs": [],
  "python.linting.pycodestyleEnabled": false,
  "python.linting.pydocstyleEnabled": false,
  "python.linting.pylamaArgs": [],
  "python.linting.pylamaEnabled": false,
  "python.linting.pylintArgs": [
    "--rcfile=.pylintrc",
    "--ignore=./utility-repo-scripts/**"
  ],
  "python.linting.pylintEnabled": true,
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": false,
  "search.exclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "/.pytest_cache/**": true,
    "./utility-repo-scripts/**": true,
    "/.coverage": true
  }
}
